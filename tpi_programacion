from colorama import Fore #libreria para agregarle colores a los caracteres
import os #libreria para poder "limpar la pantalla

# BIENVENIDA Y RETORNO AL FINALIZAR NIVEL 3

def pantalla_principal(): #se define la funcion "pantalla_principal" para poder llamarla despues
    os.system("cls") #se limpia la pantalla
    print(Fore.BLUE+"***********************************************")
    print(Fore.RED+"**********¡¡",Fore.BLUE+"B",Fore.BLUE+"I",Fore.GREEN+"E",Fore.YELLOW+"N",Fore.WHITE+"V",Fore.RED+"E",Fore.BLUE+"N",Fore.GREEN+"I",Fore.YELLOW+"D",Fore.WHITE+"O",Fore.RED+"S",Fore.RED+"!!**********")
    print("                       A")
    print(Fore.RED+"**********     M",Fore.RED+"A",Fore.GREEN+"T",Fore.YELLOW+"E",Fore.BLUE+" T",Fore.RED+"O",Fore.GREEN+"U",Fore.RED+"R      **********")
    print(Fore.BLUE+"***********************************************")
    print(Fore.YELLOW+"___un paseo por el camino de las matematicas___")
    nombreusuario= str(input (Fore.GREEN+"Ingresa tu nombre: ")) #se pide al usuario que ingrese su nombre
    print("Hola", nombreusuario) #se saluda al usuario utilizando el nombre que nos dio
    while True: # dentro de este while esta el try-except que evita el ValueError cuando se ingresa un caracter en vez de un entero
        try:
            edadusuario=int(input("¿Cuantos años tenes? : ")) #se pide al usuario que ingrese su edad
        except ValueError:
            print(Fore.RED+"¡¡¡ UUUUUPS !!!, parece que has cometido un pequeño error.\n", Fore.GREEN+" Intenta de nuevo")
        else:
            break

pantalla_principal() #se llama a pantalla principal

def menu_niveles(): #se define la funcion "menu_niveles" para poder llamarla despues
    menu=True

menu=True
while menu==True: #dentro de este while se encuentran los niveles
    while True: #dentro de este while se elije el nivel a jugar
        try:
         nivel=int(input(Fore.RED+" Para jugar al nivel 1: ***SUMA RESTA***, ingresa 1. \n Para jugar al nivel 2: ***MULTIPLICAR DIVIDIR***, ingresa 2 \n Para jugar al nivel 3: ***DESAFIO COMBINADO***, ingresa 3 \n Para salir ingresa 4 \n Ingresa el numero del nivel que quieres:"))
        except ValueError: 
            print(Fore.RED+"¡¡¡ UUUUUPS !!!, parece que has cometido un pequeño error.\n", Fore.GREEN+" Intenta de nuevo")
        else:
            break

    if nivel == 1: #nivel 1
        contador=0
        os.system("cls") #se limpia la pantalla
        print(Fore.YELLOW+"¡¡Comencemos!!\n RECORDA QUE TE PODES AYUDAR CON LAS MANOS ",Fore.RESET) 
        R1=int(input("si tengo 14 manzanas y juan me regala 12 \n ¿cuantas tengo en total?: ")) #se realiza una pregunta
        if R1==26: #si la pregunta coincide con la respuesta se suman puntos
            contador=contador+2
        R2=int(input("Elvira vende tortas. El miércoles le encargaron 8 tortas iguales. Pero ya tiene 3 hechas  \n ¿cuantas tortas tuvo que hacer?: "))
        if R2==5:
            contador=contador+2
        R3=int(input("Fernanda junta tapitas de gaseosas. Ella tiene un paquete con 36 tapitas y la tía le trajo 14 más \n ¿cuantas tapitas tengo en total?: "))
        if R3==50:
            contador=contador+2
        R4=int(input("Joaquin junto 36 piedras en la playa, pero por la tarde perdio 12 \n ¿cuantas piedras le quedan?: "))
        if R4==24:
            contador=contador+2
        R5=int(input("Fernando tiene 26 páginas completas de un álbum de figuritas. Si el álbum tiene 57 páginas \n ¿cuántas páginas le faltan completar a Fernando?: "))
        if R5==31:
            contador=contador+2
        print(Fore.RED+"TU PUNTUACION FINAL FUE DE: ", contador,Fore.RESET)
        print(Fore.GREEN+"FELICIDADES TERMINASTE EL NIVEL 1",Fore.RESET)

    elif nivel == 2: #nivel 2 con el mismo formato que el nivel 1
        contador=0
        os.system("cls")
        print(Fore.YELLOW+"¡¡Comencemos!! A RECORDAR LAS TABLAS",Fore.RESET)
        R6=int(input("si tengo 3 bolsitas con 7 caramelos en cada una, \n ¿cuantos caramelos tengo?: "))
        if R6==21:
            contador=contador+2
        R7=int(input("La entrada al cine para los mayores cuesta $6 y para los menores $4. El papá de Adrián va a ir con su hijo y cuatro amiguitos de Adrián. \n ¿Cuánto costara en total las entradas del cine?: "))
        if R7==26:
            contador=contador+2
        R8=int(input("Dorín trabaja en una panadería envasando bandejas de facturas. Si envasa 50 facturas en 5 cajas, colocando en todas la misma cantidad,\n ¿cuántas facturas caben en cada caja?: "))
        if R8==10:
            contador=contador+2
        R9=int(input("Gerardo, el bibliotecario de la escuela, dejó 42 libros para las 6 mesas de 3.º grado.\n ¿Cuántos libros habrá que poner en cada mesa para que en todas haya la misma cantidad?: "))
        if R9==7:
            contador=contador+2
        R10=int(input("Una silla tiene 4 patas. Si en un aula hay 30 sillas, \n ¿cuántas patas hay en total?: "))
        if R10==120:
            contador=contador+2
        print(Fore.RED+"TU PUNTUACION FINAL FUE DE: ", contador,Fore.RESET)
        print(Fore.GREEN+"FELICIDADES TERMINASTE EL NIVEL 2",Fore.RESET)

    elif nivel == 3: #nivel 3 con el mismo formato que el nivel 1
        contador=0
        os.system("cls")
        print(Fore.YELLOW+"¡¡Comencemos!! No olvides del orden de resolucion: 1° parentesis, 2° multiplicar/dividir y por ultimo suma/resta ",Fore.RESET)
        R11=int(input("2 x 8 + 9 / 3 = "))
        if R11==19:
            contador=contador+2
        R12=int(input("9 - 12 / 4 + 3 x 2 = "))
        if R12==12:
            contador=contador+2
        R13=int(input("14 x 3 + 6 x 8 - 17 = "))
        if R13==73:
            contador=contador+2
        R14=int(input("(12 + 3 ) x (23 - 6) - 99 = "))
        if R14==120:
            contador=contador+2
        R15=int(input("(5 x 6) + (99 / 33) / 3"))
        if R15==31: 
            contador=contador+2

        print(Fore.RED+"TU PUNTUACION FINAL FUE DE: ", contador,Fore.RESET)
        print(Fore.GREEN+"FELICIDADES TERMINASTE TODOS LOS NIVELES",Fore.RESET)
        pantalla_principal ()

    elif nivel == 4: #si el usuario presiona salir se llama a la pantalla principal
        pantalla_principal ()
    
    else: #si ingresa un valor que no corresponde se pide que lo ingrese de nuevo
            os.system("cls")
            print(Fore.RED+"********Ingresa un numero valido.********",Fore.RESET)
            menu_niveles()
